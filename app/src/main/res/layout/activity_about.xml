<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:paddingLeft="4pt"
    android:paddingRight="4pt"
    android:layout_height="match_parent"

    tools:context="com.jaysmec.chronicle.About"
    android:background="#ffee00"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="62pt"
        android:layout_marginTop="45pt"
        android:src="@drawable/notebook"
        android:visibility="gone"
        android:scaleType="centerInside"
        android:id="@+id/imageView2" />

    <TextView
        android:layout_width="match_parent"
        android:paddingLeft="6pt"
        android:paddingRight="6pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:id="@+id/WE"
        android:textSize="10pt"
        android:text="WE"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6pt"
        android:paddingRight="6pt"
        android:id="@+id/make"
        android:textSize="10pt"
        android:text="MAKE\nSTUFF."
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:paddingLeft="6pt"
        android:paddingRight="3pt"
        android:id="@+id/sollu"
        android:layout_marginTop="9pt"
        android:textSize="8.5pt"
        android:layout_marginBottom="8pt"
       android:text="@string/sollu"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4pt"
        android:background="@drawable/developer">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developer 1"
            android:textSize="8pt"
            android:textColor="@color/colorAccent"
            android:id="@+id/developer1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18pt"
                android:src="@drawable/boy"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:textSize="10pt"
                android:layout_gravity="center"
                android:text="Jayatheetha Jagirdar"
                android:textColor="#000000"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:id="@+id/gplus1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18pt"
                android:src="@drawable/gplus"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:textSize="10pt"
                android:layout_gravity="center"
                android:text=" Add to Google plus"
                android:textColor="#000000"/>

        </LinearLayout>







    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4pt"
        android:layout_marginTop="4pt"
        android:background="@drawable/developer">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developer 2"
            android:textSize="8pt"
            android:textColor="@color/colorAccent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18pt"
                android:src="@drawable/aijaz"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:textSize="10pt"
                android:layout_gravity="center"
                android:text="Syed Aijaz"
                android:textColor="#000000"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:id="@+id/gplus2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18pt"
                android:src="@drawable/gplus"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:textSize="10pt"
                android:layout_gravity="center"
                android:text="Add to Google plus"
                android:textColor="#000000"/>

        </LinearLayout>







    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4pt"
        android:layout_marginBottom="5pt"
        android:layout_marginTop="4pt"
        android:background="@drawable/developer">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developer 3"
            android:textSize="8pt"
            android:textColor="@color/colorAccent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18pt"
                android:src="@drawable/girl"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:textSize="10pt"
                android:layout_gravity="center"
                android:text="Lavanya Tolishuri"
                android:textColor="#000000"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:id="@+id/gplus3"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18pt"
                android:src="@drawable/gplus"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:textSize="10pt"
                android:layout_gravity="center"
                android:text="Add to Google plus"
                android:textColor="#000000"/>

        </LinearLayout>







    </LinearLayout>


</LinearLayout>
</ScrollView>
