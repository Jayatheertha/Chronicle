<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/slv"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.jaysmec.chronicle.NewView">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarView"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            app:titleTextAppearance="@style/toolbartext"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:contentInsetLeft="2dp"
            app:contentInsetStart="2dp">
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30pt"
            android:id="@+id/viewlinlar"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello"
                android:id="@+id/viewDate"
                android:layout_marginTop="7pt"
                android:layout_marginLeft="8pt"
                android:textSize="8pt"
                android:textColor="#0091ea"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello"
                android:id="@+id/viewTime"
                android:layout_marginTop="2pt"
                android:layout_marginLeft="8pt"
                android:textSize="8pt"
                android:textColor="#0091ea"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="130pt"
                    android:layout_height="wrap_content"
                    android:text="loc"
                    android:id="@+id/viewloc"
                    android:layout_marginTop="7pt"
                    android:layout_marginLeft="5pt"
                    android:textSize="8pt"
                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="temp"
                    android:visibility="gone"
                    android:id="@+id/viewtemp"
                    android:layout_marginTop="7pt"
                    android:textSize="8pt"
                    android:textColor="@color/colorAccent"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6pt"
                android:text="hello"
                android:textColor="#000000"
                android:textSize="7pt"
                android:padding="4pt"
                android:id="@+id/viewEntry"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3pt"
                android:layout_marginLeft="3pt"
                android:text="#hell"
                android:id="@+id/viewtag"
                android:textColor="#757575"
                android:textSize="6pt"/>


        </LinearLayout>

    </RelativeLayout>
</ScrollView>

